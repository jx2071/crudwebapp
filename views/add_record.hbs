<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">New Record</li>
    </ol>
</nav>
<br>
{{#if alert}}
<div class="alert alert-success alert-dismissible fade show" role="alert">
    {{alert}}
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}
<br>
<form class="row g-3 needs-validation" method="POST" action="/addrecord" novalidate>

    {{#each column_name}}
    <div class="row mb-3">
        <label class="col-sm-2 col-form-label">{{this}}</label>
        <div class="col-sm-7">
            <input type="email" class="form-control" name={{inc @index}}>
        </div>
    </div>
    {{/each}}

    <div class="col-2 d-grid">
        <button class="btn btn-secondary align-self-center" type="reset">Reset</button>
    </div>
    <div class="col-7 d-grid">
        <button class="btn btn-primary align-self-center" type="submit">Submit</button>
    </div>
</form>